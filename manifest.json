{
  "manifest_version": 2,

  "name": "Zero Click Payments",
  "description": "Pay bitcoin automatically to websites that request it.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
    },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
  ]
}
